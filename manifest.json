{
  "manifest_version": 2,

  "name": "Expense Manager",
  "description": "This extension tracks your overall spendings.",
  "version": "1.0",
  "icons": {
    "128": "./icon128.jpg",
    "48": "./icon48.jpg",
    "16": "./icon16.jpg"
  },

  "browser_action": {
    "default_icon": "./icon16.jpg",
    "default_popup": "popup.html"
  },

  "background": {
    "scripts": ["eventPage.js"],
    "persistent": false
  },

  "permissions": [
          "storage",
          "notifications",
          "contextMenus"
        ],

  "options_page": "options.html"
}